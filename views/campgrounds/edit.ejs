    <% layout('layout/boilerplate')%>
   
    


<div class="row">
    <h1 class="text-center">Edit Campground </h1>
    <div class="col-md-6 offset-md-3">
 
        <form method="POST" action="/campgrounds/<%=campground._id%>?_method=PUT"  novalidate class="validated-form" enctype="multipart/form-data">
         <div class="mb-3">
             <label class="form-label" for="title">Enter Title</label>
             <input class="form-control" type="text" name="campground[title]" id="title" placeholder="Title Here" value="<%=campground.title%>" required>
             <div class="valid-feedback">Looks great! </div>
               <div class="invalid-feedback">Please enter title </div>
         </div>
     
         <div class="mb-3">
             <label class="form-label" for="location">Enter Location</label>
             <input class="form-control" type="text" name="campground[location]" id="location" placeholder="Location Here" value="<%=campground.location%>" required>
             <div class="valid-feedback">Looks great! </div>
               <div class="invalid-feedback">Please enter location </div>
         </div>
         <div class="mb-3">
            <label for="image" class="form-label">Upload More Images</label>
            <input class="form-control" type="file" id="image" name="image" id="" multiple>
          </div>
         <div class="mb-3">
             <label class="form-label" for="price">Campground Price</label>
         <div class="input-group ">
             <span class="input-group-text" id="price-label">$</span>
             <input id="price" type="text" class="form-control" placeholder="0.00" aria-label="price" aria-describedby="price-label" name="campground[price]" value="<%=campground.price%>" required>
             <div class="valid-feedback">Looks great! </div>
               <div class="invalid-feedback">Please enter price </div>
           </div>
         </div>
         <div class="mb-3">
             <label class="form-label" for="description">Enter Description</label>
             <textarea class="form-control" type="text" name="campground[description]" id="description" placeholder="Location Here" required> <%= campground.description%> </textarea>
             <div class="valid-feedback">Looks great! </div>
               <div class="invalid-feedback">Please enter description </div>

             <div class="mb-3">
               
                <% campground.images.forEach(function (img,i){ %>
                    <img src="<%=img.thumbnail %>" alt="" class="img-thumbnail" alt="">
                      <div class="form-check-inline">
                        <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                      </div>
                      <label for="image-<%=i%>">Delete?</label>
              <%  }) %>



             </div>
               
         </div>
         <div class="mb-3">
         <button class="btn btn-info">Update Campground</button>
     </div>
         </form>
         <a href="/campgrounds/<%=campground._id%>">Back to Campground</a>
    </div>
 
     </div>